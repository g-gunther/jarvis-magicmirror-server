{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "__tests__/**/*"]
}
